#!/usr/bin/env ruby

ENV['RACK_ENV'] ||= 'development'

begin
  require 'jackpot'
rescue LoadError
  require 'rubygems'
  require 'jackpot'
end


if ARGV.first == 'client'
  require 'jackpot/console'
  puts "Starting client in #{ENV['RACK_ENV']} environment"
  Jackpot::Console.start
elsif ARGV.first == 'server'
  require 'jackpot/app'
  puts "Starting Jackpot applicatio nin #{ENV['RACK_ENV']} environment"
  Jackpot::Application.run!
else
  puts "Invalid option. Available options are `server` or `client`"
end
