<!DOCTYPE html>
<html>
  <head>
    <title>Jackpot</title>
    <%= stylesheet_link_tag    "jackpot/application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <%= link_to "Jackpot", root_path , :class => "brand" %>
          <div class="nav-collapse">
            <%= render "jackpot/shared/navigation" %> 

            <div class="navbar-text pull-right dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= gravatar_for_current_user :size => '32x32' %>&nbsp;<%= current_user.email %>
                <i class="icon-chevron-down icon-white"></i>
              </a>

              <ul class="dropdown-menu">
                <li> <%= link_to "Sign out", destroy_user_session_path , :method => :delete %> </li>
              </ul>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row-fluid">
      <%= render "jackpot/shared/flash_messages" %>
    </div>
    <div class="row-fluid"> 
      <div class="span10"><%= yield %></div>
      <div class="span2">
        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <h4>Settings</h4>
            <p>Jackpot is currently configured to use</p>
            <li>Gateway: <strong><%= jackpot_gateway %></strong></li>
            <li>Mode: <strong><%= jackpot_gateway_mode %></strong></li>
          <ul>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </div>

  <%= javascript_include_tag "jackpot/application" %>
</body>
</html>
